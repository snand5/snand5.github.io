---
layout: null
permalink: /search.json
---
[
  {% assign posts = site.posts | where_exp: "p", "p.hidden != true" %}
  {% for post in posts %}
    {
      "title": {{ post.title | jsonify }},
      "date": "{{ post.date | date_to_string }}",
      "permalink": "{{ post.url | relative_url }}",
      "content": {{ post.content | strip_newlines | jsonify }}{% if post.image %},
      "image": "{{ post.image | relative_url }}"{% endif %}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
